@using WebMatrix.Data

@{
	string ConnectionStr = "Server=localhost\\SQLEXPRESS01;Database=master;Trusted_Connection=True;";
	var db = Database.Open(ConnectionStr);
	var selectQueryString = "SELECT * FROM Product ORDER BY Name";
}
<html>
<body>
	<h1>Small Bakery Products</h1>
	<table>
		<tr>
			<th>Id</th>
			<th>Product</th>
			<th>Description</th>
			<th>Price</th>
		</tr>
		@foreach (var row in db.Query(selectQueryString))
		{
			<tr>
				<td>@row.Id</td>
				<td>@row.Name</td>
				<td>@row.Description</td>
				<td align="right">@row.Price</td>
			</tr>
		}
	</table>
</body>
</html>
